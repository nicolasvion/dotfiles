# compose settings

## show from headers
set envelope_from

## show headers when composing
set edit_headers

## save attachments with body
set fcc_attach

## show reply to
set reply_to

## include messages in forward
set forward_quote

# charset and reply
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
set send_charset = "utf-8:iso-8859-1:us-ascii"
set charset = "utf-8"
