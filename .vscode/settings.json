{
    // Apparence
    "workbench.colorTheme": "Nord",
    "editor.fontFamily": "'MonaspiceAr NF', 'SauceCodePro Nerd Font Mono', 'SauceCodePro Nerd Font', monospace",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        130,
    ],
    // Formatage & Linting
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    // IntelliSense & Complétion
    // "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.diagnosticMode": "workspace",
    // Tabulation & Espaces
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    // Testing
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.venvPath": "/Users/nicolas.vion/Library/Caches/pypoetry/virtualenvs/",

    // Git & Terminal
    "git.autofetch": true,
    "terminal.integrated.fontFamily": "'MonaspiceAr NF', 'SauceCodePro Nerd Font Mono', 'SauceCodePro Nerd Font', monospace",
    // Roo-Cline (tes réglages)
    "roo-cline.allowedCommands": [
        "git log",
        "git diff",
        "git show"
    ],
    "roo-cline.deniedCommands": [],
    "workbench.startupEditor": "none",
    "problems.decorations.enabled": false,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "markdown-preview-enhanced.enableHTML5Embed": true,
    "git.confirmSync": false,
    "git.enableCommitSigning": true,
    "puppet.editorService.loglevel": "debug",
    "puppet.editorService.debugFilePath": "/Users/nicolas.vion/.puppet.log",
    "puppet.editorService.foldingRange.showLastLine": true,
    "puppet.notification.nodeGraph": "statusbar",
    "puppet.notification.puppetResource": "statusbar",
    "git.enableSmartCommit": true,
    "projectManager.git.baseFolders": [
        ".git"
    ],
    "workbench.activityBar.location": "bottom",
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "symbols",
    "window.newWindowDimensions": "fullscreen",
    "window.restoreFullscreen": true,
    "git.openRepositoryInParentFolders": "never",
    "clock.alignment": "Right",
    "editor.screenReaderAnnounceInlineSuggestion": false,
    "editor.fontSize": 13
}
